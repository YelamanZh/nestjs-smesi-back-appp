{
  "compilerOptions": {
    "types": ["node", "jest", "multer"], // Добавляем поддержку типов Jest для тестирования
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true, // Пропускаем проверку библиотек
    "strictNullChecks": true, // Включаем строгую проверку null
    "noImplicitAny": true, // Обеспечиваем строгую проверку типов
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true, // Для импорта JSON-файлов
    "esModuleInterop": true // Упрощаем использование модулей CommonJS
  },
  "include": ["src/**/*.ts", "test/**/*.ts"], // Указываем исходные и тестовые файлы
  "exclude": ["node_modules", "dist"] // Исключаем ненужные файлы
}
